

@model IEnumerable<ProductGurantee>

@{
    ViewData["Title"] = "نمایش گارانتی ها";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-sm-12">
    <div class="panel">
        <div class="panel-body" style="margin-top:5%;">


            <div class="editable-responsive">
                <div id="datatable-editable_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">

                    <div class="row">

                        <div class="row">
                            <div class="col-sm-5">
                                <p class="pull-left">
                                    <a class="btn btn-primary btn-lg" href="#showmodal=/Admin/gurantee/Addgurantee">ایجاد گارانتی</a>
                                </p>

                            </div>
                        </div>

                        <div class="col-sm-12">

                            @if (TempData["Result"] != null)
                            {
                                if (TempData["Result"].ToString() == "true")
                                {
                                    <div class="alert alert-success alert-dismissable">
                                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                                        ثبت اطلاعات با موفقیت انجام شد .
                                    </div>
                                }
                                else
                                {
                                    <div class="alert alert-danger alert-dismissable">
                                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                                        خطادر انجام عملیات .
                                    </div>
                                }
                            }

                            @if (TempData["NotFoundSlider"] != null)
                            {
                                <script>

                                    setTimeout(function () {
                                        Swal.fire({
                                            position: 'top-end',
                                            icon: 'error',
                                            title: 'گارانتی با این مشخصات یافت نشد .',
                                            showConfirmButton: false,
                                            timer: 3000
                                        })
                                    }, 50)

                                </script>
                            }
                            <table class="table table-striped dataTable no-footer" id="datatable-editable" role="grid" aria-describedby="datatable-editable_info">
                                <thead>
                                    <tr role="row">
                                        <th class="sorting_asc" tabindex="0" aria-controls="datatable-editable" rowspan="1" colspan="1" style="width: 234px;" aria-sort="ascending" aria-label="موتور جستجو: activate to sort column descending">#</th>
                                        <th class="sorting" tabindex="0" aria-controls="datatable-editable" rowspan="1" colspan="1" style="width: 443px;" aria-label="مرورگر: activate to sort column ascending"> نام گارانتی</th>
                                        <th class="sorting_disabled" rowspan="1" colspan="1" style="width: 138px;" aria-label="فعالیت">فعالیت</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model.Count() > 0)
                                    {
                                        @foreach (var item in Model)
                                        {
                                            <tr class="gradeX odd" role="row">
                                                <td class="sorting_1">@item.GuranteeId</td>
                                                <td class="sorting_1">@item.guranteename</td>



                                                <td class="actions">
                                                    <a href="#" class="hidden on-editing save-row"><i class="fa fa-save"></i></a>
                                                    <a href="#" class="hidden on-editing cancel-row"><i class="fa fa-times"></i></a>
                                                    <a href="#showmodal=/Admin/gurantee/Updategurantee/@item.GuranteeId" class="on-default edit-row"><i class="fa fa-pencil"></i></a>
                                                    <a href="#showmodal=/Admin/gurantee/DeleteGurantee/@item.GuranteeId" class="on-default remove-row"><i class="fa fa-trash-o"></i></a>
                                                </td>
                                            </tr>

                                        }
                                    }
                                    else
                                    {
                                        <tr class="gradeX odd" role="row">
                                            <td colspan="5" class="sorting_1">گارانتی موجود نمی باشد .</td>

                                        </tr>
                                    }


                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="dataTables_info" id="datatable-editable_info" role="status" aria-live="polite">Showing 1 to 10 of 80 entries</div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
        <!-- end: panel body -->
        <partial name="_MainModal" />
    </div> <!-- end panel -->
</div> <!-- end col-->
@section Scripts{
    <script src="~/CssSite/Js/jquery.validate.min.js"></script>
    <script src="~/CssSite/Js/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/CssSite/Js/sweetAlert.js"></script>
    <script src="~/CssSite/Js/OpenModal.js"></script>
}
