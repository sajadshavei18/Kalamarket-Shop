@model productColor

@{
    ViewData["Title"] = "ثبت رنگ";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<link href="/AdminPanel/assets/plugins/mjolnic-bootstrap-colorpicker/dist/css/bootstrap-colorpicker.min.css" rel="stylesheet">
<div class="col-lg-12 mt-4 p-3">
    <div class="card-box">



        <form asp-action="UpdateColor" method="post" style="margin-top:5%;">
            <input type="hidden" asp-for="colorid" />
            <div class="form-group">
                <label asp-for="colorname" for="emailAddress">اسم رنگ</label>
                <input asp-for="colorname" type="text" parsley-trigger="change" placeholder="اسم رنگ را وارد نمایید " class="form-control" id="emailAddress" data-parsley-id="6">
                <span asp-validation-for="colorname" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>انتخاب رنگ</label>
                <input asp-for="ColorCode" type="text" class="colorpicker-rgba form-control" data-color-format="rgba">
                <span asp-validation-for="ColorCode" class="text-danger"></span>

            </div>

            <span class="text-danger">@Html.ValidationMessage("ErrorColor")</span>

            <div class="form-group text-right m-b-0">
                <button class="btn btn-primary waves-effect waves-light" type="submit">
                    ثبت اطلاعات
                </button>
                <a href="/admin/product/ShowAllColor" class="btn btn-default waves-effect waves-light m-l-5">
                    لغو
                </a>
            </div>

        </form>
    </div>
</div>
@section Scripts{
    <script src="/AdminPanel/assets/plugins/mjolnic-bootstrap-colorpicker/dist/js/bootstrap-colorpicker.min.js"></script>
    <script>
        $('.colorpicker-rgba').colorpicker();
    </script>

}

