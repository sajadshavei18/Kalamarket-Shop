
@model ProductPrice

@{
    ViewData["Title"] = "AddPrice";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<div class="col-lg-12 mt-4 p-3">
    <div class="card-box">



        <form asp-action="AddPrice" method="post" style="margin-top:5%;">
            <input type="hidden" asp-for="productid" value="@ViewBag.id" />
            <div class="form-group">
                <label asp-for="mainprice" for="emailAddress"></label>
                <input asp-for="mainprice" type="text" parsley-trigger="change" placeholder="عنوان اسلایدر را وارد نمایید " class="form-control" id="emailAddress" data-parsley-id="6">
                <span asp-validation-for="mainprice" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="sepcialprice" for="emailAddress"></label>
                <input asp-for="sepcialprice" type="text" parsley-trigger="change" placeholder="عنوان اسلایدر را وارد نمایید " class="form-control" id="emailAddress" data-parsley-id="6">
                <span asp-validation-for="sepcialprice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="count" for="emailAddress"></label>
                <input asp-for="count" type="text" parsley-trigger="change" placeholder="عنوان اسلایدر را وارد نمایید " class="form-control" id="emailAddress" data-parsley-id="6">
                <span asp-validation-for="count" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaxorderCount" for="emailAddress"></label>
                <input asp-for="MaxorderCount" type="text" parsley-trigger="change" placeholder="عنوان اسلایدر را وارد نمایید " class="form-control" id="emailAddress" data-parsley-id="6">
                <span asp-validation-for="MaxorderCount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndDateDisCount" for="emailAddress"></label>
                <input asp-for="EndDateDisCount" type="text" parsley-trigger="change" placeholder="عنوان اسلایدر را وارد نمایید " class="form-control" id="datepicker" data-parsley-id="6">
                <span asp-validation-for="EndDateDisCount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="productcolorid" for="emailAddress">رنگ بندی</label>
                <select class="form-control" asp-for="productcolorid" asp-items="@(new SelectList(ViewBag.Color,"colorid","colorname"))"></select>

                <span asp-validation-for="MaxorderCount" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="productguranteeid" for="emailAddress">گارانتی</label>
                <select class="form-control" asp-for="productguranteeid" asp-items="@(new SelectList(ViewBag.Gurantee,"GuranteeId","guranteename"))"></select>

                <span asp-validation-for="productguranteeid" class="text-danger"></span>
            </div>


            <div class="form-group text-right m-b-0">
                <button class="btn btn-primary waves-effect waves-light" type="submit">
                    ثبت اطلاعات
                </button>
                <a href="/admin/product/showallproduct" class="btn btn-default waves-effect waves-light m-l-5">
                    لغو
                </a>
            </div>

        </form>
    </div>
</div>


@section Scripts{


    <script type="text/javascript">
        $(function () {
            // حالت پیشفرض
            $('#datepicker').datepicker();
        });
    </script>

}